<h1>Edit Dish</h1>

<%# default form method is GET. change to POST %>
<form action="/dishes/<%= @dish['id']%>" method="post">
  <input type="hidden" name="_method" value="put">
  <label for="">name</label>
  <%# matching input names from database. e.g. name, image_url %>
  <input type="text" name="name" value="<%= @dish['name']%>">
  <label for="">image url</label>
  <input type="text" name="image_url" value="<%= @dish['image_url']%>">
  <button>post</button>
</form>